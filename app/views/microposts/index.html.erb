<h1>メッセージ一覧</h1>
<p><%= notice %></p>
<table>
    <tr>
      <th>内容</th>
    </tr>
  <% @microposts.each do |micropost| %>
    <tr>
      <td><%= micropost.content %></td>
      <td><%= link_to 'メッセージの詳細を確認する',micropost_path(micropost.id) %></td>
      <td><%= link_to "メッセージをを編集する", edit_micropost_path(micropost.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to 'メッセージを削除する', micropost_path(micropost.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to '新しくメッセージを投稿する',new_micropost_path %>
